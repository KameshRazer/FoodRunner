<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">
    <TextView
        android:id="@+id/rvdf_s_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:padding="4dp"
        android:textColor="#6E6968"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/rvdf_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/rvdf_s_no"
        android:text="Food Name"
        android:textColor="@color/Black"
        android:padding="3dp"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/rvdf_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/rvdf_s_no"
        android:layout_below="@id/rvdf_food_name"
        android:text="Rs 100"
        android:textSize="15sp"
        android:textColor="#6E6968"
        android:padding="3dp"/>
    <ToggleButton
        android:id="@+id/rvdf_button"
        android:layout_width="120dp"
        android:layout_height="25sp"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/rvdf_s_no"
        android:textOn="@string/add"
        android:textOff="@string/remove"
        android:textColor="@color/white"
        android:checked="true"
        android:textSize="15sp"
        android:background="@drawable/button_toggle_cart" />
</RelativeLayout>