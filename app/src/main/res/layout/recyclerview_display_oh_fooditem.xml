<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp">
    <RelativeLayout
        android:id="@+id/rvdof_s_no"
        android:layout_width="18dp"
        android:layout_height="5dp"
        android:background="@color/Orange"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="3dp" />
    <TextView
        android:id="@+id/rvdof_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rvdof_s_no"
        android:layout_toLeftOf="@id/rvdof_rs"
        android:layout_marginLeft="8dp"
        android:text="foodname"
        android:textColor="@color/Black"
        android:textSize="17sp"
        android:padding="2dp"/>
    <TextView
        android:id="@+id/rvdof_rs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="85dp"
        android:text="Rs. "
        android:textSize="17sp"
        android:textColor="@color/Black"
        android:padding="2dp" />
    <TextView
        android:id="@+id/rvdof_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="amt"
        android:textAlignment="textStart"
        android:textSize="17sp"
        android:textColor="@color/Black"
        android:padding="2dp"
        android:layout_marginLeft="-90dp"
        android:layout_toRightOf="@+id/rvdof_rs"/>

</RelativeLayout>